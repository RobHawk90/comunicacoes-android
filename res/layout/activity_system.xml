<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context="${packageName}.${activityClass}" >

    <widget.ModuleView
        android:id="@+id/btnManageStakeholders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/widget_margin"
        android:drawableTop="@drawable/ic_stakeholder"
        android:onClick="manageStakeholders"
        android:text="@string/manage_stakeholders" />

    <widget.ModuleView
        android:id="@+id/btnManageProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_project"
        android:onClick="manageProjects"
        android:text="@string/manage_projects" />

</LinearLayout>